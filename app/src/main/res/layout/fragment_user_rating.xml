<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/begie"
    tools:context=".screens.UserRatingFragment">

    <TextView
        android:id="@+id/tv_bmi_text2"
        android:layout_width="344dp"
        android:layout_height="81dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="299dp"
        android:text="@string/how_was_your_session_today"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="318dp"
        android:layout_height="66dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="242dp"
        android:src="@drawable/ratingback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="242dp"
        android:contentDescription="@string/records"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        style="@style/genericButton2"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="519dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="155dp"
        android:text="@string/submit_rating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="391dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>