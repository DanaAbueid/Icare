<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.PaymentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/begie">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="327dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="601dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/payment"
        android:textAlignment="center"
        android:textColor="@color/begie"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/done_payment2"
        style="@style/genericButton"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="356dp"
        android:layout_height="405dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_corner_background" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="273dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="469dp"
        android:text="Payment Amount"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="273dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="381dp"
        android:text="@string/cardnum"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="273dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="291dp"
        android:text="@string/ExpirationDate"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="273dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="503dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="207dp"
        android:text="@string/SecurityCode"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="243dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spinnerforappoint" />

    <Spinner
        android:id="@+id/months_card"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="252dp"
        android:entries="@array/months"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/year_card"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="252dp"
        android:entries="@array/years"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enter_amount"
        style="@style/genericEditText"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="417dp"
        android:hint="@string/enteramount"
        app:boxBackgroundColor="@color/gray_for_spin"
        app:boxBackgroundMode="filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:inputType="number"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enter_cvv"
        style="@style/genericEditText"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="328dp"
        android:hint="@string/entercardnum"
        app:boxBackgroundColor="@color/gray_for_spin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:inputType="number"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enter_card_number"
        style="@style/genericEditText"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="533dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="156dp"
        android:hint="@string/cvv"
        app:boxBackgroundColor="@color/gray_for_spin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:inputType="number"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>